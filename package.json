{
  "name": "b0x-contracts",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "0x-smart-contracts": "git+https://github.com/0xProject/contracts.git",
    "0x.js": "^0.32.4",
    "@0xproject/types": "^0.2.0",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "lodash": "^4.17.5",
    "minimist": "^1.2.0",
    "web3-utils": "^1.0.0-beta.34"
  },
  "dependencies": {
    "b0x.js": "git+https://github.com/b0xNetwork/b0x.js.git",
    "bignumber.js": "^6.0.0",
    "ganache-cli": "^6.1.0",
    "node-mv": "^0.1.3",
    "openzeppelin-solidity": "^1.9.0",
    "rimraf": "^2.6.2",
    "truffle": "^4.1.8",
    "truffle-hdwallet-provider": "0.0.3",
    "ziptool": "^1.0.2"
  },
  "scripts": {
    "blockchain": "./extra/restart_blockchain.sh",
    "blockchain:restart": "npm run blockchain:stop && npm run blockchain:start",
    "blockchain:start": "npm run network:run >> logs/ganache.log 2>&1 &",
    "blockchain:stop": "pkill -9 -f ganache-cli || true",
    "build": "rimraf ./build/contracts && truffle compile",
    "build:deploy": "rimraf ./build/contracts && truffle compile && npm run migrate:reset && npm run assets",
    "rebuild:deploy": "truffle compile && npm run migrate:reset",
    "assets": "node ./extra/generate_test_assets.js",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "network": "npm run network:deploy && npm run network:deployprev && npm run network:run",
    "network:deploy": "rimraf ./test_network && mkdirp ./test_network && ziptool --unzip ./extra/b0x_db_latest.zip -o ./test_network",
    "network:deployprev": "rimraf ./build/contracts && rimraf ./html_public_test && mkdirp ./build && node-mv ./test_network/build_contracts ./build/contracts && node-mv ./test_network/html_public_test ./html_public_test",
    "network:deploy0xdb": "rimraf ./test_network && mkdirp ./test_network && ziptool --unzip ./extra/0x_db_07d00cc515e0f9825b81595386b358593b7a3d6f.zip -o ./test_network",
    "network:run": "ganache-cli --networkId 50 -p 8545 --db ./test_network -m \"concert load couple harbor equip island argue ramp clarify fence smart topic\"",
    "test": "truffle test ./test/endtoend.js"
  }
}
